<odoo>
	<data noupdate="1">
		<template id="digest_mail_main"
			inherit_id="digest.digest_mail_main">
			<xpath expr="//div[hasclass('by_odoo')]/a" position="attributes">
				<attribute name="href">https://viindoo.com</attribute>
			</xpath>
			<xpath expr="//div[hasclass('by_odoo')]/a/span[hasclass('odoo_link_text')]" position="replace" mode="inner">
				Viindoo
			</xpath>
			<xpath expr="//p[hasclass('by_odoo')]//span[hasclass('odoo_link_text')]" position="replace" mode="inner">
				Viindoo
			</xpath>
			<xpath expr="//div[@id='footer']/p[@id='powered']/a" position="attributes">
				<attribute name="href">https://viindoo.com</attribute>
			</xpath>
			<xpath expr="//div[@id='footer']/p[@id='powered']/a//span[hasclass('odoo_link_text')]" position="replace" mode="inner">
				Viindoo
			</xpath>
			<xpath expr="//div[@id='footer']/p[@id='powered']/a//span[hasclass('odoo_link_text')]" position="attributes">
				<attribute name="style">color: #7f4282;</attribute>
			</xpath>
		</template>

		<template id="digest_section_mobile"
			inherit_id="digest.digest_section_mobile">
			<xpath expr="//tbody/tr/td/img" position="attributes">
				<attribute name="src">https://viindoo.com/viin_brand_digest/static/img/phone1.png</attribute>
				<attribute name="alt">Viindoo Mobile</attribute>
				<attribute name="style">width:25%; display: block; margin-left: auto; margin-right: auto;</attribute>
			</xpath>
			<xpath expr="//p[hasclass('run_business')]/b" position="replace" mode="inner">
				Viindoo Mobile
			</xpath>
			<xpath expr="//a[@href='https://play.google.com/store/apps/details?id=com.odoo.mobile']" position="attributes">
				<attribute name="href">https://play.google.com/store/apps/details?id=com.viindoo</attribute>
			</xpath>

			<xpath expr="//a[@href='https://itunes.apple.com/us/app/odoo/id1272543640']" position="attributes">
				<attribute name="href">https://apps.apple.com/vn/app/viindoo-mobile/id1562267579</attribute>
			</xpath>

		</template>

	</data>
</odoo>
