<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="digest.digest_digest_default" model="digest.digest">
        <field name="name">Your Viindoo Periodic Digest</field>
    </record>
    <record id="digest.digest_tip_digest_0" model="digest.tip">
        <field name="tip_description" type="html">
			<div>
			    <p class="tip_title">Tip: Speed up your workflow with shortcuts</p>
			    <p class="tip_content">Press ALT in any screen to highlight shortcuts for every button in the screen. It is useful to process multiple documents in batch.</p>
			    <img src="/viin_brand_digest/static/img/alt-shortcuts.gif" class="illustration_border" />
			</div>
        </field>
    </record>
    <record id="digest.digest_tip_digest_2" model="digest.tip">
        <field name="name">Tip: A calculator in Viindoo</field>
        <field name="tip_description" type="html">
			<div>
			    <p class="tip_title">Tip: A calculator in Viindoo</p>
				<p class="tip_content">When editing a number, you can use formulae by typing the `=` character. This is useful when computing a margin or a discount on a quotation, sale order or invoice.</p>
				<img src="/digest/static/src/img/milk-calculator.gif" class="illustration_border" />
			</div>
        </field>
    </record>
    <record id="digest.digest_tip_digest_3" model="digest.tip">
        <field name="tip_description" type="html">
			<div>
			    <p class="tip_content">Type "@" to notify someone in a message, or "#" to link to a channel. Try to notify @ViindooBot to test the feature.</p>
			</div>
        </field>
    </record>

</odoo>
