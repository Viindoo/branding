<odoo>
    <data>
        <template id="brand_promotion"
            inherit_id="sale_quotation_builder.brand_promotion">
            <xpath
                expr="//t[@t-call='web.brand_promotion_message']"
                position="replace">
                <t t-call="web.brand_promotion_message">
                    <t t-set="_message">
                        An
                        <a target="_blank"
                            href="https://viindoo.com/intro/crm?utm_source=db&amp;utm_medium=portal">awesome Open Source CRM</a>
                    </t>
                    <t t-set="_utm_medium" t-valuef="portal" />
                </t>
            </xpath>
        </template>
    </data>
</odoo>
