<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
	    <field name="name">res.config.settings.view.form</field>
	    <field name="model">res.config.settings</field>
	    <field name="priority" eval="101" />
	    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_info_settings']/div/div/div/div/field[@name='website_domain']"
            position="attributes">
                <attribute name="placeholder">https://viindoo.com</attribute>            
            </xpath>
            <xpath expr="//div[@id='google_analytics_setting']/div/div/a[hasclass('oe_link')]"
            position="attributes">
                <attribute name="href">https://viindoo.com/documentation/15.0/applications/websites/website/optimize/how-to-track-your-website-s-traffic-in-google-analytics.html</attribute>
            </xpath>
            <!-- Plausible Shared Link: Features not available -->
            <xpath expr="//div[@id='plausbile_setting']/div[hasclass('o_setting_right_pane')]/div/a[hasclass('oe_link')]"
            position="attributes">
                <attribute name="href">https://viindoo.com/documentation/15.0/applications.html</attribute>
            </xpath>
            <xpath expr="//div[@id='robots_setting'][2]/div[hasclass('o_setting_right_pane')]/div[hasclass('text-muted')]"
            position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
            <xpath expr="//div[@id='robots_setting'][2]/div[hasclass('o_setting_right_pane')]/div[hasclass('text-muted')]"
            position="after">
				<div class="text-muted mt8">
				    Sitemap.xml: Help search engine crawlers to find out what pages are present and which have recently changed, and to crawl your site accordingly. This file is automatically generated by system.
				</div>
			</xpath>
        </field>
    </record>
</odoo>
