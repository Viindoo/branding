<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
	    <field name="name">res.config.settings.view.form</field>
	    <field name="model">res.config.settings</field>
	    <field name="priority" eval="101" />
	    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_domain']" position="attributes">
                <attribute name="placeholder">https://viindoo.com</attribute>
            </xpath>
            <xpath expr="//setting[@id='google_analytics_setting']//a[hasclass('oe_link')]"
            position="attributes">
                <attribute name="href">https://viindoo.com/documentation/16.0/applications/websites/website/optimize/how-to-track-your-website-s-traffic-in-google-analytics.html</attribute>
            </xpath>
            <!-- Plausible Shared Link: Features not available -->
            <xpath expr="//setting[@id='plausbile_setting']//a[hasclass('oe_link')]"
            position="attributes">
                <!-- Todo: Wait for the consulting department to add the link -->
                <attribute name="style">display: none;</attribute>"
                <attribute name="href">https://viindoo.com/documentation/16.0/applications.html</attribute>
            </xpath>
            <xpath expr="//setting[@id='robots_setting'][./div[hasclass('alert-info')]]" position="attributes">
                <attribute name="help">Sitemap.xml: Help search engine crawlers to find out what pages are present and which have recently changed, and to crawl your site accordingly. This file is automatically generated by system.</attribute>
            </xpath>
        </field>
    </record>
</odoo>
