<odoo>
    <data>
        <template id="brand_promotion"
            inherit_id="website.brand_promotion">
            <xpath
                expr="//t[@t-call='web.brand_promotion_message']"
                position="replace">
                <t t-call="web.brand_promotion_message">
                    <t t-set="_message">
                        Create a
                        <a target="_blank"
                            href="https://viindoo.com/intro/website?utm_source=db&amp;utm_medium=website">free website</a>
                    </t>
                    <t t-set="_utm_medium" t-valuef="website" />
                </t>
            </xpath>
        </template>
    </data>
</odoo>
