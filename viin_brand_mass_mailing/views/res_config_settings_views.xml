<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mass.mailing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mass_mailing.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='dedicated_server_setting_container']/div[hasclass('o_setting_left_pane')]"
                position="attributes">
                <attribute name="title">Use a specific mail server in priority. Otherwise System
                    relies on the first outgoing mail server available (based on their sequencing)
                    as it does for normal mails.</attribute>
            </xpath>
        </field>
    </record>
</odoo>
