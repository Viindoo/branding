<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_record_sidebar" name="My Portal Record Sidebar" inherit_id="portal.portal_record_sidebar">
    	<xpath expr="//a" position="attributes">
    		<attribute name="href">http://www.viindoo.com?utm_source=db&amp;utm_medium=portal</attribute>
    		<attribute name="title">viindoo</attribute>
    	</xpath>
    	<xpath expr="//img" position="attributes">
    		<attribute name="src">/viin_brand/static/img/viindoo_logo_tiny.png</attribute>
    		<attribute name="alt">Viindoo Logo</attribute>
    	</xpath>
    </template>
</odoo>
