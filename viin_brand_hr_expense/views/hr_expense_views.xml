<odoo>
    <record id="hr_expense.hr_expense_actions_my_all" model="ir.actions.act_window">
        <field name="help" type="html">
		    <p class="o_view_nocontent_expense_receipt">
		    Did you try the mobile app?
			</p>
			<p>Snap pictures of your receipts and let <span><b>Viindoo</b></span><br/> automatically create expenses for you.</p>
            <div class="container d-inline-flex row">
                <div class="col-3"></div>
                <div class="d-flex flex-column align-items-center col" >
                    <a href="https://apps.apple.com/vn/app/viindoo-mobile/id1562267579" 
                        target="_blank" >
                        <img alt="Apple App Store" class="img img-fluid " 
                        src="/viin_brand_hr_expense/static/img/app_store.png"/>
                    </a>
                    <img alt="Apple App Store QR" class="img img-fluid" 
                        src="/viin_brand_hr_expense/static/img/apple-qr.png"/>         
                </div>
                <div class="d-flex flex-column align-items-center col">
                    <a href="https://play.google.com/store/apps/details?id=com.viindoo" 
                        target="_blank" >
                        <img alt="Google Play Store" class="img img-fluid" 
                        src="/viin_brand_hr_expense/static/img/google_play.png"/>
                    </a>
                    <img alt="Google Store QR" class="img img-fluid"
                        src="/viin_brand_hr_expense/static/img/googlestore-qr.png"/> 
                </div>
                 <div class="col-3"></div>
            </div>
        </field>
    </record>
</odoo>
