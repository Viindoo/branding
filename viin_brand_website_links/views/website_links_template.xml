<odoo>
    <template id="create_shorten_url" inherit_id="website_links.create_shorten_url">
        <xpath expr="//form[@id='o_website_links_link_tracker_form']//input[@id='url']" position="attributes">
            <attribute name="placeholder">e.g. https://viindoo.com</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_website_links_create_tracked_url')]/div/div[hasclass('row')]/div/p[2]" position="attributes">
        	<attribute name="style">display:none</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_website_links_create_tracked_url')]/div/div[hasclass('row')]/div/p[2]" position="after">
            <p class="text-muted" style="text-align: justify;">Those trackers can be used in Google Analytics to track clicks and visitors, or in Viindoo reports to track opportunities and related revenues.</p>
        </xpath>
    </template>
</odoo>
