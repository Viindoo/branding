<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<template id="web_layout" inherit_id="web.layout"
		name="Viindoo Web layout">
		<xpath expr="//title" position="attributes">
			<attribute name="t-esc">title or 'Viindoo'</attribute>
		</xpath>
		<xpath expr="//link[@type='image/x-icon']" position="attributes">
			<attribute name="t-att-href">x_icon or '/viin_brand/static/img/favicon.ico'</attribute>
		</xpath>
	</template>
	
	<template id="brand_promotion_message" inherit_id="web.brand_promotion_message" name="Viindoo Brand Promotion Message">
		<xpath expr="//t[@t-set='odoo_logo']/a" position="attributes">
			<attribute name="t-attf-href">https://viindoo.com?utm_source=db&amp;utm_medium=#{_utm_medium}</attribute>
		</xpath>
		<xpath expr="//t[@t-set='odoo_logo']/a/img" position="attributes">
			<attribute name="alt">Viindoo</attribute>
			<attribute name="src">/viin_brand/static/img/viindoo_logo_tiny.png</attribute>
		</xpath>
    </template>
    
    <template id="login_layout" inherit_id="web.login_layout">
		<xpath expr="//a[@href='https://www.odoo.com?utm_source=db&amp;utm_medium=auth']/span" position="attributes">
			<attribute name="style">display:none</attribute>
    	</xpath>
    	<xpath expr="//a[@href='https://www.odoo.com?utm_source=db&amp;utm_medium=auth']/span" position="after">
    		<span>Viindoo</span>
    	</xpath>
    	<xpath expr="//a[@href='https://www.odoo.com?utm_source=db&amp;utm_medium=auth']" position="attributes">
    		<attribute name="href">https://viindoo.com?utm_source=db&amp;utm_medium=auth</attribute>
    	</xpath>
    </template>

	<template id="webclient_offline">
        <t t-call="web.layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
            <t t-set="title">Offline</t>
            <t t-set="head">
                <script type="text/javascript">
                    window.addEventListener('online', () => location.reload());
                </script>
                <style>
                    body {
                    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Ubuntu, "Noto Sans", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
                    padding:0;
                    margin:0;
                    background-color: #fff;
                    color: rgb(17, 24, 39);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    text-align: center;
                    height: 100vh;
                    width: 100vw;
                    user-select: none;
                    }
                    .card {
                    width: 80%;
                    }
                    .card img {
                    width: 96px;
                    height: auto;
                    filter: grayscale(.6);
                    }
                    .card button {
                    background-color: #00bbce;
                    color: #FFFFFF;
                    border: 1px solid #00bbce;
                    border-radius: .25rem;
                    padding: .5rem 1rem;
                    cursor: pointer;
                    font-size: 1.2rem;
                    font-weight: 500;
                    }
                </style>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
            </t>
            <div class="card">
                <img t-attf-src="data:image/png;base64,{{viindoo_icon}}" alt="Viindoo logo"/>
                <h1>You are offline</h1>
                <p>Check your network connection and come back here. Viindoo will load as soon as you're back online.</p>
                <button onclick="location.reload()">Check again</button>
            </div>
        </t>
    </template>

	<template id="webclient_bootstrap" inherit_id="web.webclient_bootstrap">
		<xpath expr="//link[@rel='apple-touch-icon']" position="attributes">
			<attribute name="href">/viin_brand_common/static/img/viindoo-icon-ios.png</attribute>
		</xpath>
		<xpath expr="//meta[@name='theme-color']" position="attributes">
			<attribute name="content">#008d9b</attribute>
		</xpath>
    </template>
</odoo>
