<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
	    <field name="name">payment.provider.form</field>
	    <field name="model">payment.provider</field>
	    <field name="inherit_id" ref="payment.payment_provider_form"/>
	    <field name="arch" type="xml">
	       <xpath expr="//div[hasclass('oe_title')]/div/a" position="attributes">
	           <attribute name="href">https://viindoo.com/pricing?utm_source=db&amp;utm_medium=module</attribute>
	       </xpath>
	    </field>
	</record>
	
    <record id="payment_provider_kanban" model="ir.ui.view">
	    <field name="name">payment.provider.kanban</field>
	    <field name="model">payment.provider</field>
	    <field name="inherit_id" ref="payment.payment_provider_kanban"/>
	    <field name="arch" type="xml">
	       <xpath expr="//div[hasclass('o_payment_kanban_button')]/button[@target='_blank']" position="attributes">
	           <attribute name="href">https://viindoo.com/pricing?utm_source=db&amp;utm_medium=module</attribute>
	       </xpath>
	   </field>
	</record>
</odoo>
