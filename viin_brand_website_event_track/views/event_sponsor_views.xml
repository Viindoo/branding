<odoo>
    <record id="event_sponsor_view_form" model="ir.ui.view">
        <field name="name">event.sponsor.view.form</field>
        <field name="model">event.sponsor</field>
        <field name="inherit_id" ref="website_event_track.event_sponsor_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='url']" position="attributes">
                <attribute name="placeholder">e.g. : https://www.viindoo.com</attribute>
            </xpath>
        </field>
    </record>
</odoo>
